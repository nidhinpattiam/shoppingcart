<section>
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td><img style="height: 50px; width:50px" src="/product-images/{{this._id}}.jpg"></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>